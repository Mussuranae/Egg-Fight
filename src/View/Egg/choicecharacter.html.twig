{% extends 'layout.html.twig' %}

{% block title %}Choice character{% endblock %}

{% block content %}

<div class="container under_nav">

    <div class="row">

        {% for character in characters %}

                <div class="col s2">
                    <div class="card card_choice">
                        <div class="card-image choice_image">
                            <img src="{{ character.image }}" class="img w-100">
                        </div>
                        <div class="card-content choice_name">
                            <p class="p_name">{{ character.name }}</p>
                            <p class="species">{{ character.species }}</p>
                        </div>
                    </div>
                    <form method="POST"><button name="{{ character.id }}" type="submit" class="btn waves-effect waves-light btn-small pick_me">Pick Me!</button></form>
                </div>

        {% endfor %}
        <div class="character">
            <p>Personnage sélectionné n°1 : {{ perso1.name }}</p>
            <p>Personnage sélectionné n°2 : {{ perso2.name }}</p>
        </div>
    </div>

    <div class="row">
        <a type="submit" class="btn waves-effect waves-light btn-small pick_me" href="/fight/show/"> Go fight !</a>
    </div>
{% endblock %}