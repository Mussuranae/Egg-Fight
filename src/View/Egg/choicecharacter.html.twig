{% extends 'layout.html.twig' %}

{% block title %}Choice character{% endblock %}

{% block content %}

<div class="container">
  <div class="row">

		{% for character in characters %}
			<div class="col-sm-1">
					{{ character.name }}
					<img src="{{ character.image }}" class="img w-100">
			</div>
		{% endfor %}

  	<div class="character">

  	</div>
  </div>
</div>

{% endblock %}